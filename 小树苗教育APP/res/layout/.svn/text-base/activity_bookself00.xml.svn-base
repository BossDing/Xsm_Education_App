        android:src="@drawable/bs_diaopai2" /> -->

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bs_bbak_a1" />

    <ImageView
        android:id="@+id/imageT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@anim/bs_t" />

    <ImageView
        android:id="@+id/imageZhu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageT1"
        android:layout_marginLeft="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/bs_zhu1" />

    <ImageView
        android:id="@+id/imageT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@anim/bs_t" />

    <ImageView
        android:id="@+id/imageZhu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageT2"
        android:layout_marginRight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/bs_zhu2" />

    <LinearLayout
        android:id="@+id/layoutBg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageT2"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bs_bg21"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyclerview_horizontal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00777777"
                android:scrollbars="none" >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLine2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/bs_bg22"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"
            android:orientation="vertical" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyclerview_horizontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:scrollbars="none" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bs_lan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bs_monkey" >
    </ImageView>

    <ImageView
        android:id="@+id/imgJingling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/bs_bbak_a2" >
    </ImageView>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/id_Leftback_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/back1" />

            <ImageView
                android:id="@+id/id_RightQiKan_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/qk1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/id_RightQiKan_img"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="377dp"
                android:layout_toLeftOf="@+id/id_RightQiKan_img" >
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>