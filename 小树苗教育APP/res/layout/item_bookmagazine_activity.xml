<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="85dp" >

    <ImageView
        android:id="@+id/id_magazine_gallery_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:src="@drawable/moreinfo_photo"
        android:scaleType="centerCrop" />

    <ImageView 
        android:id="@+id/id_magazine_gallery_item_image_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/id_magazine_gallery_item_image"
        android:layout_marginTop="2dp"
        android:src="@drawable/free"/>
    
    <ImageView 
        android:id="@+id/id_magazine_gallery_item_image_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/id_magazine_gallery_item_image"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/download"/>

</RelativeLayout>